<h1>Products</h1>

<h1> only have view button and have info pop up in modal</h1>

<%= link_to 'New Product', new_product_path %>


<div>
  <%= grid(@products_grid) do |g|

    g.column do |product|
      product.id
    end

    g.column  do |product|
      product.name
    end

    g.column  do |product|
      product.link
    end

    g.column  do |product|
      product.orders
    end

    g.column do |product|
      product.description
    end

    # g.column do |product|
    #   product.archived? ? 'Yes' : 'No'
    # end

    g.column do |product|
      link_to('View', product_path(product))
    end

    g.column do |product|
      buffer =link_to('View ', product_path(product))
      buffer += link_to('Edit ', edit_product_path(product))
      raw buffer
    end

    g.column do |product|
      link_to('Edit', edit_product_path(product))
    end

    g.column do |product|
      link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }
    end

  end -%>
</div>
